        }
        #spirit-tab{
            background:rgb(183, 255, 183);
            border-bottom:1px solid black;
            cursor:pointer;
        }
        #wine-form{
            border-radius:0 0 10px 10px;
            padding:1rem;
            margin:0 auto;
            margin-bottom: 20px;
            max-width:900px;
            width:95%;
            background:lightblue;
            border-left:1px solid black;
            border-right:1px solid black;
            border-bottom:1px solid black;
        }
        h1{
            width:95%;
            margin:0 auto;
            padding-top:1rem;
            text-align: center;
        }
        button{
            padding:0.5em 1em;
            border-radius:10px;
            cursor:pointer;
        }
        #section-wrapper,
        #category-wrapper,
        #region-wrapper,
        #subregion-wrapper{
            position:relative;
            display:none;
        }
        .section,
        .category,
        .region,
        .subregion{
            position:absolute;
            display:none;
        }
        @media (width < 1000px) {
            #description{
                height:3em;
                width:60ch;
            }
        }
        @media (width < 550px){
            #description{
                height:4em;
                width:40ch;
            }
        }
        @media (width < 350px){
            #description{
                height:5em;
                width:30ch;
            }
        }
    </style>
</head>

