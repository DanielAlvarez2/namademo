<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        *{
            margin:0;
            padding:0;
            box-sizing:border-box;
        }
        #tab-flexbox{
            margin:0 auto;
            display:flex;
            max-width:900px;
            width:95%;
            justify-content:space-between;
        }
        #wine-tab,
        #spirit-tab{
            border-radius:10px 10px 0 0;
            width:50%;
            text-align:center;
            border-top:1px solid black;
            border-left:1px solid black;
            border-right:1px solid black;
            height:2rem;
            display:grid;
            align-content:center;
        }
        #wine-tab{
            background:lightblue;
        }
        #spirit-tab{
            background:rgb(183, 255, 183);
            border-bottom:1px solid black;
            cursor:pointer;
        }
        #wine-form{
            border-radius:0 0 10px 10px;
            padding:1rem;
            margin:0 auto;
            margin-bottom: 20px;
            max-width:900px;
            width:95%;
            background:lightblue;
            border-left:1px solid black;
            border-right:1px solid black;
            border-bottom:1px solid black;
        }
        h1{
            width:95%;
            margin:0 auto;
            padding-top:1rem;
            text-align: center;
        }
        button{
            padding:0.5em 1em;
            border-radius:10px;
            cursor:pointer;
        }
        #section-wrapper,
        #category-wrapper{
            position:relative;
        }
        .section,
        .category{
            position:absolute;
            visibility:hidden;
        }
    </style>
</head>

<body>
    <h1>CREATE NEW MENU ITEM</h1>
    <br><br>
    <div id="tab-flexbox">
        <div id="wine-tab">Add New Wine</div>
        <div id="spirit-tab">Add New Spirit</div>
    </div>
    <div id="wine-form">
        <form>
            <input type="hidden" value="wine" name="wine_spirit">

            <label for="type">Type of Wine:</label><br>
            <select id="type" name="type" required>
                <option disabled selected>Select Wine Type...</option>
                <option value="BY THE GLASS">By The Glass</option>
                <option value="HALF BOTTLES">Half Bottle</option>
                <option value="LARGE FORMATS">Large Format</option>
                <option value="SAKE">Sake</option>
                <option value="SPARKLING">Sparkling</option>
                <option value="CHAMPAGNE">Champagne</option>
                <option value="WHITE WINE">White Wine</option>
                <option value="ROSÉ WINE">Rosé Wine</option>
                <option value="RED WINE">Red Wine</option>
                <option value="SWEET WINE">Sweet Wine</option>
                <option value="FORTIFIED WINE">Fortified Wine</option>
            </select>

            <br><br>
            <label for="section" id="label-section">Section:</label><br>
            
            <div id="section-wrapper">

                <select class="section" id="section-btg" name="section">
                    <option disabled selected>BTG Select a Section...</option>
                    <option value="SAKE">Sake</option>
                    <option value="CARAFE">Carafe</option>
                    <option value="CHAMPAGNE">Champagne</option>
                    <option value="WHITE WINE">White Wine</option>
                    <option value="ROSÉ WINE">Rosé Wine</option>
                    <option value="RED WINE">Red Wine</option>
                    <option value="DESSERT WINE">Dessert Wine</option>
                </select>

                <select class="section" id="section-half-bottle" name="section">
                    <option disabled selected>1/2BTL Select a Section...</option>
                    <option value="CHAMPAGNE">Champagne</option>
                    <option value="WHITE WINE">White Wine</option>
                    <option value="RED WINE">Red Wine</option>
                    <option value="SAKE">Sake</option>
                </select>

                <select name="section" class="section" id="section-large-format">
                    <option disabled selected>LARGE FORMAT Select a Section...</option>
                    <option value="SPARKLING & CHAMPAGNE">Sparkling & Champagne</option>
                    <option value="WHITE WINE">White Wine</option>
                    <option value="ROSÉ WINE">Rosé Wine</option>
                    <option value="RED WINE">Red Wine</option>
                </select>

                <select name="section" class="section" id="section-sake">
                    <option selected disabled>SAKE Select a Section...</option>
                    <option value="NIGORI">Nigori</option>
                    <option value="JUNMAI & JUNMAI GINJO">Junmai & Junmai Ginjo</option>
                    <option value="DAIGINJO">Daiginjo</option>
                    <option value="JUNMAI DAIGINJO">Junmai Daiginjo</option>
                    <option value="SPECIALTY">Specialty</option>
                    <option value="SWEET">Sweet</option>
                </select>

                <select name="section" class="section" id="section-champagne">
                    <option selected disabled>CHAMPAGNE Select a Section...</option>
                    <option value="NON-VINTAGE">Non-Vintage</option>
                    <option value="VINTAGE">Vintage</option>
                    <option value="ROSÉ">Rosé</option>
                </select>

                <select name="section" class="section" id="section-white-wine">
                    <option selected disabled>WHITE Select a Section...</option>
                    <option value="ITALY">Italy</option>
                    <option value="FRANCE">France</option>
                    <option value="AUSTRIA">Austria</option>
                    <option value="GERMANY">Germany</option>
                    <option value="SPAIN">Spain</option>
                    <option value="PORTUGAL">Portugal</option>
                    <option value="ISRAEL">Israel</option>
                    <option value="UNITED STATES">United States</option>
                    <option value="NEW ZEALAND">New Zealand</option>
                    <option value="AUSTRALIA">Australia</option>
                    <option value="ARGENTINA">Argentina</option>
                    <option value="SOUTH AFRICA">South Africa</option>
                </select>

                <select name="section" class="section" id="section-rosé-wine">
                    <option selected disabled>ROSÉ Select a Section...</option>
                    <option value="FRANCE">France</option>
                    <option value="ITALY">Italy</option>
                </select>

                <select name="section" class="section" id="section-red-wine">
                    <option selected disabled>RED Select a Section...</option>
                    <option value="ITALY">Italy</option>
                    <option value="FRANCE">France</option>
                    <option value="AUSTRIA">Austria</option>
                    <option value="GERMANY">Germany</option>
                    <option value="SPAIN">Spain</option>
                    <option value="PORTUGAL">Portugal</option>
                    <option value="ISRAEL">Israel</option>
                    <option value="UNITED STATES">United States</option>
                    <option value="LEBANON">Lebanon</option>
                    <option value="NEW ZEALAND">New Zealand</option>
                    <option value="CHILE">Chile</option>
                    <option value="SOUTH AFRICA">South Africa</option>
                </select>

                <select class="section" name="section" id="section-sweet-wine">
                    <option selected disabled>SWEET Select a Section...</option>
                    <option value="FRANCE">France</option>
                    <option value="ITALY">Italy</option>
                    <option value="AUSTRIA">Austria</option>
                    <option value="HUNGARY">Hungary</option>
                    <option value="CANADA">Canada</option>
                    <option value="GERMANY">Germany</option>
                    <option value="SPAIN">Spain</option>
                </select>

                <select class="section" name="section" id="section-fortified-wine">
                    <option selected disabled>FORTIFIED Select a Section...</option>
                    <option value="">Portugal</option>
                    <option value="">Madeira</option>
                </select>
    
                <select class="section" style="visibility:visible;">
                    <option selected disabled>Select a Section...</option>
                </select>

            </div>

            <br><br>
            <label for="category">Category:</label><br>

            <div id="category-wrapper">

                <select class="category" id="white-wine-italy" name="category">
                    <option selected disabled>WHITE ITALY Select a Category...</option>
                    <option value="PIEDMONT">Piedmont</option>
                    <option value="ALTO ADIGE">Alto Adige</option>
                    <option value="FRIULI-VENEZIA GIULIA">Friuli-Venezia Giulia</option>
                    <option value="VENETO">Veneto</option>
                    <option value="TUSCANY">Tuscany</option>
                    <option value="UMBRIA">Umbria</option>
                    <option value="SICILY">Sicily</option>
                </select>

                <select class="category" id="white-wine-france" name="category">
                    <option selected disabled>WHITE FRANCE Select a Category</option>
                    <option value="BURGUNDY">Burgundy</option>
                    <option value="BORDEAUX BLANC">Bordeaux Blanc</option>
                    <option value="SAVOIE">Savoie</option>
                    <option value="LOIRE VALLEY">Loire Valley</option>
                    <option value="JURA">Jura</option>
                    <option value="RHÔNE VALLEY">Rhône Valley</option>
                    <option value="ALSACE">Alsace</option>
                </select>

                <select class="category" id="white-wine-germany" name="category">
                    <option selected disabled>WHITE GERMANY Select a Category...</option>
                    <option value="TROCKEN">Trocken</option>
                    <option value="PRÄDIKATSWEIN & FEINHERB">Prädikatswein & Feinherb</option>
                </select>

                <select class="category" id="white-wine-united-states" name="category">
                    <option selected disabled>WHITE USA Select a Category...</option>
                    <option vlaue="CALIFORNIA">California</option>
                    <option vlaue="OREGON">Oregon</option>
                </select>

                <select class="category" id="rosé-wine-france" name="category">
                    <option selected disabled>ROSÉ FRANCE Select a Category</option>
                    <option value="LOIRE VALLEY">Loire Valley</option>
                    <option value="PROVENCE">Provence</option>
                </select>

                <select class="category" id="rosé-wine-italy" name="category">
                    <option selected disabled>ROSÉ ITALY Select a Category</option>
                    <option value="SICILY">Sicily</option>
                </select>

                <select class="category" id="red-wine-italy" name="category">
                    <option selected disabled>RED ITALY Select a Category...</option>
                    <option value="TRENTINO-ALTO ADIGE">Trentino-Alto Adige</option>
                    <option value="PIEDMONT">Piedmont</option>
                    <option value="VENETO">Veneto</option>
                    <option value="FRIULI-VENEZIA GIULIA">Friuli-Venezia Giulia</option>
                    <option value="TUSCANY">Tuscany</option>
                    <option value="SICILY">Sicily</option>
                </select>

                <select class="category" id="red-wine-france" name="category">
                    <option selected disabled>RED FRANCE Select a Category...</option>
                    <option value="BURGUNDY">Burgundy</option>
                    <option value="BEAUJOLAIS">Beaujolais</option>
                    <option value="BORDEAUX">Bordeaux</option>
                    <option value="LOIRE VALLEY">Loire Valley</option>
                    <option value="RHÔNE VALLEY">Rhône Valley</option>
                </select>

                <select class="category" name="category" id="red-wine-spain">
                    <option selected disabled>RED SPAIN Select a Category...</option>
                    <option value="BIERZO">Bierzo</option>
                    <option value="PRIORAT">Priorat</option>
                    <option value="RÍAS BAIXAS">Rías Baixas</option>
                    <option value="RIBERA DEL DUERO">Ribera del Duero</option>
                    <option value="RIOJA">Rioja</option>
                    <option value="CANARY ISLANDS">Canary Islands</option>
                </select>

                <select class="category" name="category" id="red-wine-united-states">
                    <option selected disabled>RED USA Select a Category...</option>
                    <option value="OREGON">Oregon</option>
                    <option value="CALIFORNIA">California</option>
                    <option value="WASHINGTON">Washington</option>
                    <option value="NEW YORK">New York</option>
                </select>

                <select class="category" style="visibility:visible">
                    <option selected disabled>Select a Category</option>
                </select>

            </div>






            <br><br>
            <label for="bin">Bin#:</label><br>
            <input type="number" min="0" max="9999" name="bin">

            <br><br>
            <label for="description">Description:</label><br>
            <input type="text" name="description" maxlength="50" size="60">

            <br><br>
            <label for="vintage_size">Vintage:</label><br>
            <input type="text" name="vintage_size" maxlength="4" style="width:5ch">

            <br><br>
            <label for="price">Price:</label><br>
            <input type="number" name="price" min="0" max="99999">

            <br><br>
            <label for="cost">Cost:</label><br>
            <input type="number" name="cost" min="0" max="99999">

            <br><br>
            <label for="quantity">Quantity:</label><br>
            <input type="number" min="0" max="999">

            <br><br>
            <label for="status">Status:</label><br>
            <select name="status">
                <option selected disabled>Select a Status...</option>
                <option value="pre-launch">Pre-Launch</option>
                <option value="live">Live</option>
                <option value="retired" disabled>Retired</option>
            </select>


            <br><br><br>
            <button type="submit">Save</button>
            <br><br>
        </form>
    </div>
    
    <div id="spirit-form"></div>
        


    <script>
        function showSection(){
            const sections = document.querySelectorAll('.section')
            sections.forEach(section=>section.style.visibility = 'hidden')
            const type = document.querySelector('#type').value
            console.log(type)
            document.querySelector('#label-section').style.visibility = 'visible'
            if(type == 'BY THE GLASS') document.querySelector('#section-btg').style.visibility = 'visible'
            if(type == 'HALF BOTTLES') document.querySelector('#section-half-bottle').style.visibility = 'visible'
            if(type == 'LARGE FORMATS') document.querySelector('#section-large-format').style.visibility = 'visible'
            if(type == 'SAKE') document.querySelector('#section-sake').style.visibility = 'visible'
            if(type == 'SPARKLING') document.querySelector('#label-section').style.visibility = 'hidden'
            if(type == 'CHAMPAGNE') document.querySelector('#section-champagne').style.visibility = 'visible'
            if(type == 'WHITE WINE') document.querySelector('#section-white-wine').style.visibility = 'visible'
            if(type == 'ROSÉ WINE') document.querySelector('#section-rosé-wine').style.visibility = 'visible'
            if(type == 'RED WINE') document.querySelector('#section-red-wine').style.visibility = 'visible'
            if(type == 'SWEET WINE') document.querySelector('#section-sweet-wine').style.visibility = 'visible'
            if(type == 'FORTIFIED WINE') document.querySelector('#section-fortified-wine').style.visibility = 'visible'
        }
        const wineType = document.querySelector('#type')
        wineType.addEventListener('change', showSection)


        const categories = document.querySelectorAll('.category')


        function sectionWhiteWineShowCategory(){
            categories.forEach(category => category.style.visibility = 'hidden')
            if (sectionWhiteWine.value == 'ITALY') document.querySelector('#white-wine-italy').style.visibility = 'visible'
            if (sectionWhiteWine.value == 'FRANCE') document.querySelector('#white-wine-france').style.visibility = 'visible'
            if (sectionWhiteWine.value == 'GERMANY') document.querySelector('#white-wine-germany').style.visibility = 'visible'
            if (sectionWhiteWine.value == 'UNITED STATES') document.querySelector('#white-wine-united-states').style.visibility = 'visible'
        }
        const sectionWhiteWine = document.querySelector('#section-white-wine')
        sectionWhiteWine.addEventListener('change', sectionWhiteWineShowCategory)



        function sectionRoséWineShowCategory(){
            categories.forEach(category => category.style.visibility = 'hidden')
            if (sectionRoséWine.value == 'FRANCE') document.querySelector('#rosé-wine-france').style.visibility = 'visible'
            if (sectionRoséWine.value == 'ITALY') document.querySelector('#rosé-wine-italy').style.visibility = 'visible'
        }
        const sectionRoséWine = document.querySelector('#section-rosé-wine')
        sectionRoséWine.addEventListener('change', sectionRoséWineShowCategory)


        function sectionRedWineShowCategory(){
            categories.forEach(category => category.style.visibility = 'hidden')
            if (sectionRedWine.value == 'ITALY') document.querySelector('#red-wine-italy').style.visibility = 'visible'
            if (sectionRedWine.value == 'FRANCE') document.querySelector('#red-wine-france').style.visibility = 'visible'
            if (sectionRedWine.value == 'SPAIN') document.querySelector('#red-wine-spain').style.visibility = 'visible'
            if (sectionRedWine.value == 'UNITED STATES') document.querySelector('#red-wine-united-states').style.visibility = 'visible'
        }
        const sectionRedWine = document.querySelector('#section-red-wine')
        sectionRedWine.addEventListener('change', sectionRedWineShowCategory)

    </script>
</body>
</html>